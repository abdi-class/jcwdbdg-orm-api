generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Categories {
  Ekonomi
  Transportasi
  Lifestyle
  Sport
  Global
}

model Accounts {
  // Main column
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String

  // column definition for relation to table Blog
  blogs Blogs[]
}

model Blogs {
  id          Int         @id @default(autoincrement())
  title       String
  category    Categories?
  content     String
  imgUrl      String
  isPublished Boolean     @default(false)
  createdAt   DateTime    @default(now())
  // define FK
  Accounts    Accounts?   @relation(fields: [accountsId], references: [id])
  accountsId  Int?
}
